@using Kantin.DATA.Entity
<table class="table table-sm table-hover">
    <thead class="thead-dark">
        <h2>Alışveriş Sepeti</h2>
        <tr>
            <th>ID</th>
            <th>Ürün İsmi</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th></th>
        </tr>
    </thead>

    @if (MyCart.Cart != null)
    {
        foreach (var Cart in MyCart.Cart)
        {
            <tbody>
                <tr>
                    <td>@Cart.Urun.Id</td>
                    @if (Cart.Urun.Name.Length > 15)
                    {
                        <td>
                            <p title="@Cart.Urun.Name">
                                @Cart.Urun.Name.Substring(0, 12)...
                            </p>
                        </td>

                    }
                    else
                    {
                        <td>@Cart.Urun.Name</td>

                    }
                    <td>@Cart.Urun.Price ₺</td>
                    <td>@Cart.Adet</td>
                    @*<td><a href="/Admin/Shopping/DeleteFromCart?id=@Cart.Urun.Id" class="btn btn-danger">Sil</a></td>*@
                    <td>
                        <button class="btn btn-danger" onclick="SepettenSil('@Cart.Urun.Id')">Sil</button>
                    </td>


                </tr>
            </tbody>
        }
    }
    else
    {
        <tr>
            <td>
                <b>Ürün Yok!</b>
            </td>

        </tr>
    }
</table>
<div class="col-md-4">
    <p>Toplam : @MyCart.Toplam₺</p>
    <a href="/Admin/Shopping/Finish" class="btn btn-success" style="margin-top: -78px; margin-left: 292px; ">Bitir</a>
    <button class="btn btn-danger" onclick="Clear()" style="margin-top: -128px; margin-left: 219px; ">Sıfırla</button>
</div>

