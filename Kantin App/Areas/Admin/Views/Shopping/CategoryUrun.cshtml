                    //setTimeout(reloadPage, 500);
                    partialGet();

                }
            }
        })
    }

    function Finish() {
        $.ajax({
            url: "/Admin/Shopping/Finish",
            //method: "",

            success: function (result) {

                if (result) {
                    //setTimeout(reloadPage, 500);
                    //location.reload()



                }
            }
        })
    }

    function Clear() {
        $.ajax({
            url: "/Admin/Shopping/ClearCart",
            method: "Post",

            success: function (result) {

                if (result) {
                    //setTimeout(reloadPage, 500);
                    partialGet();

                }
            }
        })
    }

    function CategoryUrun() {
        var d = document.getElementById("categories").value;
