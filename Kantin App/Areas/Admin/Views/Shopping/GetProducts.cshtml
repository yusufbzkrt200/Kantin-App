@using Kantin.DATA.Entity
@model IEnumerable<Product>

@if (Model.Count() != 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md mr-3 mb-3" style="height: 324px; width: 250px; background-color: #454d55; border: 2px solid #007bff; border-radius: 15px; ">
                <div class="mt-3" style="margin-top: 15px; ">
                    @if (product.Name.Length > 10)
                    {
                        <h2 title="@product.Name" style="text-align:center;color:white">@product.Name.Substring(0, 10)...</h2>
                    }
                    else
                    {
                        <h2 style="text-align:center;color:white">@product.Name</h2>
                    }
                </div>
                <div style="text-align: center; " class="mb-3">
                    <img src="~/Areas/Admin/Products/@product.UrunLink" style="border-radius: 15px; width: 180px; height: 180px" />
                </div>

                <div style="text-align:center">
                    <button class="hoverButton mb-1" onclick="SepetEkle('@product.Id')" @*style="border-radius: 15px;background-color:burlywood"*@>Sepete Ekle @product.Price ₺</button>
                    <button class="hoverButton2" onclick="onay('@product.Id')">İade</button>
                </div>

            </div>
        }
    </div>
}
else
{
    <b>Ürün Yok!</b>
}
